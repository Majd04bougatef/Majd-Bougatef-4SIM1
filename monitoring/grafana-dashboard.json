{
  "annotations": {"list": []},
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Request Rate (by URI)",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[1m])) by (uri)",
          "legendFormat": "{{uri}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "points": false,
      "fill": 1,
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "graph",
      "title": "Average Request Duration (ms)",
      "targets": [
        {
          "expr": "(sum(rate(http_server_requests_seconds_sum[1m])) by (uri) / sum(rate(http_server_requests_seconds_count[1m])) by (uri)) * 1000",
          "legendFormat": "{{uri}}"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "points": false,
      "fill": 0,
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "graph",
      "title": "JVM Memory (heap / non-heap)",
      "targets": [
        {"expr": "jvm_memory_used_bytes{area=\"heap\"}", "legendFormat": "heap"},
        {"expr": "jvm_memory_used_bytes{area=\"nonheap\"}", "legendFormat": "non-heap"}
      ],
      "lines": true,
      "linewidth": 2,
      "points": false,
      "fill": 1,
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
    },
    {
      "type": "graph",
      "title": "JVM Threads",
      "targets": [
        {"expr": "jvm_threads_live_threads", "legendFormat": "live threads"}
      ],
      "lines": true,
      "linewidth": 2,
      "points": false,
      "fill": 0,
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
    }
  ],
